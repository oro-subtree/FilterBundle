<script type="text/template" id="text-filter-template">
    <button type="button" class="btn filter-criteria-selector oro-drop-opener oro-dropdown-toggle">
        <% if (showLabel) { %><%= label %>: <% } %>
        <strong class="filter-criteria-hint"><%= criteriaHint %></strong>
        <span class="caret"></span>
    </button>
    <% if (canDisable) { %>
        <a href="<%= nullLink %>" class="disable-filter">
            <i class="icon-remove hide-text"><%- _.__("Close") %></i>
        </a>
    <% } %>
    <div class="filter-criteria dropdown-menu" />
</script>

<script type="text/template" id="text-filter-simple-template">
    <div class="filter-criteria" />
</script>

<script type="text/template" id="text-filter-popup-criteria-template">
    <div>
        <div>
            <input type="text" name="value" value=""/>
        </div>
        <div class="oro-action">
            <div class="btn-group">
                <button type="button" class="btn btn-primary filter-update"><%- _.__("Update") %></button>
            </div>
        </div>
    </div>
</script>

<script type="text/template" id="text-filter-popup-criteria-simple-template">
    <div>
        <div>
            <input type="text" name="value" value=""/>
        </div>
    </div>
</script>

<script type="text/template" id="choice-filter-popup-criteria-template">
    <div class="choicefilter">
        <div class="input-prepend">
            <div class="btn-group">
                <button class="btn dropdown-toggle" data-toggle="dropdown">
                    <%= selectedChoiceLabel %><span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <% _.each(choices, function (option) { %>
                        <li<% if (selectedChoice == option.value) { %> class="active"<% } %>>
                            <a class="choice_value" href="#" data-value="<%= option.value %>"><%= option.label %></a>
                        </li>
                    <% }); %>
                </ul>
                <input type="text" name="value" value="">
                <input class="name_input" type="hidden" name="<%= name %>" id="<%= name %>" value="<%= selectedChoice %>"/>
            </div>
        </div>
        <button class="btn btn-primary filter-update" type="button"><%- _.__("Update") %></button>
    </div>
</script>

<script type="text/template" id="choice-filter-popup-criteria-simple-template">
    <div class="choicefilter">
        <div class="input-prepend">
            <div class="btn-group">
                <button class="btn dropdown-toggle" data-toggle="dropdown">
                    <%= selectedChoiceLabel %><span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <% _.each(choices, function (option) { %>
                    <li<% if (selectedChoice == option.value) { %> class="active"<% } %>>
                    <a class="choice_value" href="#" data-value="<%= option.value %>"><%= option.label %></a>
                    </li>
                    <% }); %>
                </ul>
                <span> of the following: </span>
                <input type="text" name="value" value="">
                <input class="name_input" type="hidden" name="<%= name %>" id="<%= name %>" value="<%= selectedChoice %>"/>
            </div>
        </div>
    </div>
</script>
